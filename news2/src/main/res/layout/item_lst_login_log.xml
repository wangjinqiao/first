<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/news_item_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_login_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_time_default"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_login_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="@string/text_address_default"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_login_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆方式"
        android:textColor="@color/black" />
</LinearLayout>